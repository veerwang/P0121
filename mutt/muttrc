set mbox_type=Maildir
set folder=$HOME/.mail/
set header_cache=~/.mail/.hcache

set spoolfile=~/.mail/kevin

mailboxes = kevin

set sendmail="/usr/local/bin/msmtp"
set editor="vim"
set send_charset="us-ascii:iso-8859-1:utf-8"
set pager_index_lines=6
set abort_unmodified=no
set include
macro index G "!fetchmail -a -m '/usr/bin/procmail -d %T'\r"
set fast_reply=yes

set move = no 
set record=~/.mail/sent
set postpone=yes
set postponed=~/.mail/draft
set 

source ~/.mail/.alias
set alias_file = "$HOME/.mail/.alias"

set sort=date

ignore *
unignore From:
unignore To:
unignore CC:
unignore Subject:
unignore Date:

set use_from=yes
set envelope_from=yes
set from="王威<kevin.wang2004@tom.com>"

macro generic "<esc>1" ":set from='王威<kevin.wang2004@tom.com>'"
macro generic "<esc>2" ":set from='王威<71875002@qq.com>'"
macro generic "<esc>3" ":set from='王威<wangwei200431004@126.com>'"
macro generic "<esc>4" ":set from='王威<kevin.wang2004@hotmail.com>'"
macro generic "<esc>5" ":set from='王威<kevin.wang2004@gmail.com>'"

